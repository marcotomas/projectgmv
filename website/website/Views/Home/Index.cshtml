

<div class="container">
    <div class="row">
        <h2 >
            Shopping List
        </h2>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <div class="col-xs-3">
                <a data-toggle="modal" data-target="#addListModal">+ Add List</a>
            </div>
        </div>
    </div>
    <div class="row" style="margin-top:20px;margin-left:20px">
        <ul>
            @{ }
            <li>
                <a href="@Url.Action("ListItems", "Home")">List1</a>
                <a class="text-info" style="margin-left:20px" >Edit</a>
                <a class="text-danger"> Remove</a>
            </li>
        </ul>
    </div>
</div>

<div id="addListModal" class="modal fade">
    @Html.Partial("shoppingCard")
</div>

<script>
    function addList() {
        $("#addListModal").load('@Url.Action("addListCard", "Home")', function () {
            $("addListModal").modal('show');
        });
    }
</script>